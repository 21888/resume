{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project Achievement Schema",
  "description": "Schema for project achievement card data",
  "type": "object",
  "required": ["id", "title", "description", "category", "status", "timeline", "metrics", "team", "technologies", "tags", "createdAt", "updatedAt"],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-zA-Z0-9-_]+$",
      "minLength": 1,
      "description": "Unique identifier for the project"
    },
    "title": {
      "type": "string",
      "minLength": 1,
      "maxLength": 100,
      "description": "Project title"
    },
    "description": {
      "type": "string",
      "minLength": 10,
      "maxLength": 1000,
      "description": "Project description"
    },
    "category": {
      "type": "string",
      "enum": ["web", "mobile", "desktop", "api", "infrastructure", "research"],
      "description": "Project category"
    },
    "status": {
      "type": "string",
      "enum": ["completed", "ongoing", "paused", "cancelled"],
      "description": "Project status"
    },
    "timeline": {
      "type": "object",
      "required": ["startDate", "duration", "isOngoing"],
      "properties": {
        "startDate": {
          "type": "string",
          "format": "date",
          "description": "Project start date"
        },
        "endDate": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Project end date (null for ongoing projects)"
        },
        "duration": {
          "type": "string",
          "pattern": "^\\d+\\s+(day|week|month|year)s?$",
          "description": "Project duration in human-readable format"
        },
        "isOngoing": {
          "type": "boolean",
          "description": "Whether the project is currently ongoing"
        },
        "estimatedCompletion": {
          "type": ["string", "null"],
          "format": "date",
          "description": "Estimated completion date for ongoing projects"
        },
        "milestones": {
          "type": "array",
          "items": {
            "type": "object",
            "required": ["id", "title", "date", "completed", "importance"],
            "properties": {
              "id": {
                "type": "string",
                "minLength": 1
              },
              "title": {
                "type": "string",
                "minLength": 1,
                "maxLength": 100
              },
              "description": {
                "type": "string",
                "maxLength": 500
              },
              "date": {
                "type": "string",
                "format": "date"
              },
              "completed": {
                "type": "boolean"
              },
              "importance": {
                "type": "string",
                "enum": ["low", "medium", "high", "critical"]
              }
            }
          }
        }
      }
    },
    "metrics": {
      "type": "object",
      "required": ["primary", "kpis"],
      "properties": {
        "primary": {
          "type": "array",
          "minItems": 1,
          "items": {
            "$ref": "#/definitions/metricItem"
          }
        },
        "secondary": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/metricItem"
          }
        },
        "kpis": {
          "type": "array",
          "items": {
            "allOf": [
              { "$ref": "#/definitions/metricItem" },
              {
                "type": "object",
                "required": ["weight", "threshold"],
                "properties": {
                  "weight": {
                    "type": "number",
                    "minimum": 0,
                    "maximum": 1
                  },
                  "threshold": {
                    "type": "object",
                    "required": ["excellent", "good", "acceptable"],
                    "properties": {
                      "excellent": { "type": "number" },
                      "good": { "type": "number" },
                      "acceptable": { "type": "number" }
                    }
                  }
                }
              }
            ]
          }
        }
      }
    },
    "team": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "role"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "role": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "avatar": {
            "type": "string",
            "format": "uri"
          },
          "contribution": {
            "type": "string",
            "maxLength": 200
          },
          "isLead": {
            "type": "boolean"
          },
          "skills": {
            "type": "array",
            "items": {
              "type": "string",
              "minLength": 1
            }
          },
          "contactInfo": {
            "type": "object",
            "properties": {
              "email": {
                "type": "string",
                "format": "email"
              },
              "linkedin": {
                "type": "string",
                "format": "uri"
              },
              "github": {
                "type": "string",
                "format": "uri"
              },
              "portfolio": {
                "type": "string",
                "format": "uri"
              }
            }
          },
          "joinDate": {
            "type": "string",
            "format": "date"
          },
          "leaveDate": {
            "type": "string",
            "format": "date"
          }
        }
      }
    },
    "technologies": {
      "type": "array",
      "minItems": 1,
      "items": {
        "type": "object",
        "required": ["id", "name", "category"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "maxLength": 50
          },
          "category": {
            "type": "string",
            "enum": ["frontend", "backend", "database", "tool", "platform"]
          },
          "icon": {
            "type": "string"
          },
          "proficiency": {
            "type": "number",
            "minimum": 1,
            "maximum": 10
          },
          "version": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "maxLength": 200
          },
          "website": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "links": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "title", "url", "type"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "maxLength": 100
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "type": {
            "type": "string",
            "enum": ["demo", "repository", "documentation", "article", "video", "other"]
          },
          "icon": {
            "type": "string"
          },
          "description": {
            "type": "string",
            "maxLength": 200
          }
        }
      }
    },
    "images": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["id", "url", "alt", "type"],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "url": {
            "type": "string",
            "format": "uri"
          },
          "alt": {
            "type": "string",
            "minLength": 1,
            "maxLength": 200
          },
          "caption": {
            "type": "string",
            "maxLength": 300
          },
          "type": {
            "type": "string",
            "enum": ["screenshot", "diagram", "photo", "logo", "other"]
          },
          "width": {
            "type": "number",
            "minimum": 1
          },
          "height": {
            "type": "number",
            "minimum": 1
          },
          "thumbnail": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string",
        "minLength": 1,
        "maxLength": 30
      }
    },
    "createdAt": {
      "type": "string",
      "format": "date-time"
    },
    "updatedAt": {
      "type": "string",
      "format": "date-time"
    }
  },
  "definitions": {
    "metricItem": {
      "type": "object",
      "required": ["id", "label", "value", "type"],
      "properties": {
        "id": {
          "type": "string",
          "minLength": 1
        },
        "label": {
          "type": "string",
          "minLength": 1,
          "maxLength": 50
        },
        "value": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        },
        "unit": {
          "type": "string",
          "maxLength": 20
        },
        "type": {
          "type": "string",
          "enum": ["number", "percentage", "currency", "text"]
        },
        "trend": {
          "type": "string",
          "enum": ["up", "down", "neutral"]
        },
        "icon": {
          "type": "string"
        },
        "color": {
          "type": "string",
          "enum": ["success", "warning", "error", "info"]
        },
        "description": {
          "type": "string",
          "maxLength": 200
        },
        "target": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        },
        "previousValue": {
          "oneOf": [
            { "type": "string" },
            { "type": "number" }
          ]
        }
      }
    }
  }
}